{
  "version": 2,
  "builds": [
    {
      "src": "*.{html,js,css}",
      "use": "@vercel/static"
    },
    {
      "src": "**/*.{png,jpg,jpeg,gif,ico,svg,webp,json,xml,woff,woff2,ttf,eot}",
      "use": "@vercel/static"
    },
    {
      "src": "images/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/admin", "dest": "/admin.html" },
    { "src": "/admin-login", "dest": "/admin-login.html" },
    { "src": "/booking", "dest": "/booking.html" },
    { "src": "/rider-login", "dest": "/rider-login.html" },
    { "src": "/rider-dashboard", "dest": "/rider-dashboard.html" },
    { "src": "/rider-signup", "dest": "/rider-signup.html" },
    { "src": "/(.*\\.(?:js|css|png|jpg|jpeg|gif|ico|svg|webp|json|xml|woff|woff2|ttf|eot))", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
